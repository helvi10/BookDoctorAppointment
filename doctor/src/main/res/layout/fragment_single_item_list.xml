<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingStart="@dimen/ui_spacing_md"
    android:paddingEnd="@dimen/ui_spacing_md">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/single_item_info_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/ui_body_black_bold"
        android:textSize="@dimen/ui_title"
        android:text="@string/please_select_one_of_the_following_option"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/single_item_info_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_spacing_md"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/single_item_info_header" />

</androidx.constraintlayout.widget.ConstraintLayout>



