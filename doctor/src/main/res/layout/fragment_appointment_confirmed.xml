<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/ui_spacing_md"
    android:paddingTop="@dimen/ui_spacing_48"
    android:paddingEnd="@dimen/ui_spacing_md"
    android:paddingBottom="@dimen/ui_spacing_md">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/customer_information_root"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/appointment_confirmed_imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/ui_spacing_140"
            android:paddingEnd="@dimen/ui_spacing_140"
            android:src="@drawable/ic_calendar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment_confirmed_header"
            style="@style/ui_body_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_title"
            android:gravity="center"
            android:text="@string/confirmed_appointment"
            android:textSize="@dimen/ui_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_confirmed_imageView" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment_confirmed_time"
            style="@style/ui_body_black_bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_title"
            android:gravity="center"
            android:textSize="@dimen/ui_spacing_32"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/appointment_confirmed_header" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment_confirmed_date"
            style="@style/ui_body_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textSize="@dimen/ui_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_confirmed_time" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/appointment_confirmed_address"
            style="@style/ui_body_black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ui_title"
            android:gravity="center"
            android:textSize="@dimen/ui_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_confirmed_date" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/appointment_confirmed_button"
            style="@style/ui_button_primary"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ui_spacing_48"
            android:layout_marginTop="@dimen/ui_spacing_48"
            android:text="@string/done"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appointment_confirmed_address" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
