<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/tools"
    card_view:cardBackgroundColor="#E6E6E6"
    card_view:cardCornerRadius="8dp"
    card_view:cardElevation="8dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/ui_spacing_md">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/doctor_ad_image_view"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/medical_ad"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/doctor_ad_name"
            style="@style/ui_body_black_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:text="@string/membership_has_its_benefits"
            android:textSize="@dimen/ui_spacing_16"
            app:layout_constraintLeft_toRightOf="@+id/doctor_ad_image_view"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="28dp" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/doctor_ad_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="28dp"
            android:layout_marginTop="16dp"
            android:text="@string/view_options"
            android:textSize="@dimen/ui_spacing_md"
            android:scrollHorizontally="false"
            app:layout_constraintLeft_toRightOf="@+id/doctor_ad_image_view"
            app:layout_constraintTop_toBottomOf="@+id/doctor_ad_name"
            android:layout_marginStart="28dp" />

        <View
            android:id="@+id/edit_customer_info_header_underline1"
            style="@style/ui_divider_grey_1"
            android:layout_marginTop="@dimen/ui_spacing_md"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/doctor_ad_image_view"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
